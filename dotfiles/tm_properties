# Hide log and tmp directories from search popups and file browser

myExtraExcludes       = "log,tmp,node_modules,build.js,_build,deps"
excludeInFileChooser  = "{$excludeInFileChooser,$myExtraExcludes}"
excludeInFolderSearch = "{$excludeInFolderSearch,$myExtraExcludes,build}"
excludeInBrowser      = "{$excludeInBrowser,$myExtraExcludes}"

myExtraIncludes       = ".env,.env.local,.gitignore,.buildpacks,.codeclimate.yml,.foreman,.jshintrc,.rspec,.ruby-version,.rubocop.yml,.tool-versions,.circleci,.iex.exs"
includeInFileChooser  = "{$includeInFileChooser,$myExtraIncludes}"
includeInFolderSearch = "{$includeInFolderSearch,$myExtraIncludes}"
includeInBrowser      = "{$includeInBrowser,$myExtraIncludes}"

# Treat certain files as plain text
[ "{README,INSTALL,LICENSE,TODO}" ]
fileType              = "text.plain"

[ "{.rspec,.ruby-version,.buildpacks,.env,.env.local,.foreman,.gitignore,.jshintrc}" ]
fileType              = "text.plain"
